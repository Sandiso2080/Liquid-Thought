@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.GeneralHeader>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    var background = Model.Value<IPublishedContent>("background") != null ? Model.Value<IPublishedContent>("background").Url() : "";
}
@if (Model.BackgroundImage != null)
{
<div class="view intro-2">
    <div class="full-bg-img" style="background-image: url('@Model.BackgroundImage.Url()'); background-repeat: no-repeat; background-size: cover; background-position: center; ">
        <div class="mask rgba-black-light flex-center py-5">
            <div class="container white-text py-5">
                <div class="white-text wow fadeInUp">
                    <h2 class="py-5">@Model.Title</h2>
                </div>
            </div>
        </div>
    </div>
</div>
}
